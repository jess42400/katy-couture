{%- comment -%}
  CSS Variables - Katy Couture Theme
  Palette luxe : vert forêt, crème, or, terracotta, rose poudré
{%- endcomment -%}

{% style %}
  /* ============================================
     FONT FACES
     ============================================ */
  {{ settings.type_heading_font | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_face: font_display: 'swap' }}
  {{ settings.type_body_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}

  :root {
    /* ============================================
       PALETTE KATY COUTURE
       ============================================ */

    /* Couleurs principales */
    --color-primary: {{ settings.color_primary | default: '#E8DED6' }};
    --color-primary-light: {{ settings.color_primary | default: '#E8DED6' | color_lighten: 10 }};
    --color-primary-dark: {{ settings.color_primary | default: '#E8DED6' | color_darken: 10 }};

    --color-cream: {{ settings.color_cream | default: '#F5F2EB' }};
    --color-cream-dark: {{ settings.color_cream | default: '#F5F2EB' | color_darken: 5 }};

    /* Couleurs d'accent */
    --color-gold: {{ settings.color_gold | default: '#C9A962' }};
    --color-gold-light: {{ settings.color_gold | default: '#C9A962' | color_lighten: 15 }};
    --color-gold-dark: {{ settings.color_gold | default: '#C9A962' | color_darken: 10 }};

    --color-terracotta: {{ settings.color_terracotta | default: '#B87B5E' }};
    --color-terracotta-light: {{ settings.color_terracotta | default: '#B87B5E' | color_lighten: 15 }};
    --color-terracotta-dark: {{ settings.color_terracotta | default: '#B87B5E' | color_darken: 10 }};

    --color-rose: {{ settings.color_rose | default: '#D4B5A8' }};
    --color-rose-light: {{ settings.color_rose | default: '#D4B5A8' | color_lighten: 10 }};
    --color-rose-dark: {{ settings.color_rose | default: '#D4B5A8' | color_darken: 15 }};

    /* Couleurs neutres */
    --color-dark: {{ settings.color_dark | default: '#1A1A1A' }};
    --color-dark-soft: {{ settings.color_dark | default: '#1A1A1A' | color_lighten: 15 }};
    --color-light: {{ settings.color_light | default: '#FAFAF8' }};
    --color-light-dim: {{ settings.color_light | default: '#FAFAF8' | color_darken: 3 }};

    /* Couleurs fonctionnelles */
    --color-border: #E8E6E1;
    --color-border-dark: #D1CEC7;
    --color-overlay: rgba(26, 26, 26, 0.4);
    --color-overlay-light: rgba(26, 26, 26, 0.2);
    --color-overlay-dark: rgba(26, 26, 26, 0.6);

    /* ============================================
       TYPOGRAPHIE
       ============================================ */
    --font-heading: {{ settings.type_heading_font.family | default: 'Playfair Display' }}, {{ settings.type_heading_font.fallback_families | default: 'serif' }};
    --font-heading-weight: {{ settings.type_heading_font.weight | default: 400 }};
    --font-heading-style: {{ settings.type_heading_font.style | default: 'normal' }};

    --font-body: {{ settings.type_body_font.family | default: 'Inter' }}, {{ settings.type_body_font.fallback_families | default: 'sans-serif' }};
    --font-body-weight: {{ settings.type_body_font.weight | default: 400 }};
    --font-body-style: {{ settings.type_body_font.style | default: 'normal' }};

    /* Tailles de texte - fluides avec clamp() */
    --text-xs: clamp(0.7rem, 0.65rem + 0.25vw, 0.75rem);
    --text-sm: clamp(0.8rem, 0.75rem + 0.25vw, 0.875rem);
    --text-base: clamp(0.9rem, 0.85rem + 0.25vw, 1rem);
    --text-lg: clamp(1rem, 0.95rem + 0.25vw, 1.125rem);
    --text-xl: clamp(1.1rem, 1rem + 0.5vw, 1.25rem);

    /* Tailles de titres - fluides */
    --heading-xs: clamp(0.875rem, 0.8rem + 0.4vw, 1rem);
    --heading-sm: clamp(1rem, 0.9rem + 0.5vw, 1.25rem);
    --heading-md: clamp(1.25rem, 1.1rem + 0.75vw, 1.5rem);
    --heading-lg: clamp(1.5rem, 1.25rem + 1.25vw, 2rem);
    --heading-xl: clamp(1.75rem, 1.5rem + 1.5vw, 2.5rem);
    --heading-2xl: clamp(2rem, 1.5rem + 2.5vw, 3rem);
    --heading-3xl: clamp(2.5rem, 2rem + 3vw, 4rem);
    --heading-display: clamp(3rem, 2rem + 5vw, 6rem);

    /* Interlignage */
    --leading-tight: 1.1;
    --leading-snug: 1.25;
    --leading-normal: 1.5;
    --leading-relaxed: 1.75;

    /* Espacement lettres */
    --tracking-tight: -0.02em;
    --tracking-normal: 0;
    --tracking-wide: 0.05em;
    --tracking-wider: 0.1em;
    --tracking-widest: 0.2em;

    /* ============================================
       ESPACEMENTS
       ============================================ */
    --space-xs: 0.5rem;    /* 8px */
    --space-sm: 1rem;      /* 16px */
    --space-md: 2rem;      /* 32px */
    --space-lg: 4rem;      /* 64px */
    --space-xl: 7.5rem;    /* 120px */
    --space-2xl: 11rem;    /* 176px */

    /* Espacement sections */
    --section-spacing: clamp(4rem, 3rem + 5vw, 8rem);
    --section-spacing-sm: clamp(2rem, 1.5rem + 2.5vw, 4rem);

    /* ============================================
       LAYOUT
       ============================================ */
    --max-width: 1400px;
    --max-width-narrow: 800px;
    --max-width-wide: 1600px;
    --page-margin: clamp(1rem, 0.5rem + 2.5vw, 3rem);
    --header-height: 80px;
    --header-height-scrolled: 64px;

    /* ============================================
       TRANSITIONS & ANIMATIONS
       ============================================ */
    --duration-fast: 0.2s;
    --duration-normal: 0.4s;
    --duration-slow: 0.8s;
    --duration-slower: 1.2s;

    --ease-out: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --ease-in-out: cubic-bezier(0.65, 0, 0.35, 1);
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    --ease-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);

    /* ============================================
       BORDURES & OMBRES
       ============================================ */
    --radius-sm: 2px;
    --radius-md: 4px;
    --radius-lg: 8px;
    --radius-full: 9999px;

    --shadow-sm: 0 1px 2px rgba(26, 26, 26, 0.05);
    --shadow-md: 0 4px 6px rgba(26, 26, 26, 0.07);
    --shadow-lg: 0 10px 15px rgba(26, 26, 26, 0.1);
    --shadow-xl: 0 20px 25px rgba(26, 26, 26, 0.15);

    /* ============================================
       Z-INDEX
       ============================================ */
    --z-base: 1;
    --z-dropdown: 100;
    --z-sticky: 200;
    --z-header: 500;
    --z-overlay: 800;
    --z-modal: 900;
    --z-toast: 1000;
  }

  /* ============================================
     RESPONSIVE - MOBILE
     ============================================ */
  @media (max-width: 768px) {
    :root {
      --header-height: 64px;
      --header-height-scrolled: 56px;
      --section-spacing: clamp(3rem, 2rem + 3vw, 5rem);
    }
  }
{% endstyle %}

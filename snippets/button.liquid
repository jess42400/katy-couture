{% doc %}
  Renders a button or link styled as a button.

  @param {string} label - The button text
  @param {string} [url] - Optional URL to make it a link
  @param {string} [style] - Button style: 'primary', 'secondary', 'accent' (default: 'primary')
  @param {string} [size] - Button size: 'small', 'default', 'large' (default: 'default')
  @param {string} [type] - Button type for form buttons: 'submit', 'button' (default: 'button')
  @param {string} [class] - Additional CSS classes
  @param {boolean} [full_width] - Whether button should be full width

  @example
  {% render 'button', label: 'Shop now', url: '/collections/all' %}
  {% render 'button', label: 'Add to cart', style: 'accent', type: 'submit' %}
{% enddoc %}

{%- liquid
  assign style_class = 'btn--primary'
  if style == 'secondary'
    assign style_class = 'btn--secondary'
  elsif style == 'accent'
    assign style_class = 'btn--accent'
  endif

  assign size_class = ''
  if size == 'small'
    assign size_class = 'btn--small'
  elsif size == 'large'
    assign size_class = 'btn--large'
  endif

  assign width_class = ''
  if full_width
    assign width_class = 'btn--full-width'
  endif
-%}

{%- if url -%}
  <a href="{{ url }}" class="btn {{ style_class }} {{ size_class }} {{ width_class }} {{ class }}">
    {{- label -}}
  </a>
{%- else -%}
  <button type="{{ type | default: 'button' }}" class="btn {{ style_class }} {{ size_class }} {{ width_class }} {{ class }}">
    {{- label -}}
  </button>
{%- endif -%}

{% stylesheet %}
  .btn--full-width {
    width: 100%;
  }
{% endstylesheet %}

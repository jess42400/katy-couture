<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" class="no-js">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#FDF9F7">

  {%- comment -%} Preconnect to external resources {%- endcomment -%}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

  {%- comment -%} Google Fonts - Playfair Display & Inter {%- endcomment -%}
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">

  {%- comment -%} Title {%- endcomment -%}
  <title>
    {%- if page_title -%}
      {{ page_title }}
      {%- if current_page != 1 %} - Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} - {{ shop.name }}{% endunless -%}
    {%- else -%}
      {{ shop.name }}
    {%- endif -%}
  </title>

  {%- comment -%} Meta description {%- endcomment -%}
  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}

  {%- comment -%} Canonical URL {%- endcomment -%}
  <link rel="canonical" href="{{ canonical_url }}">

  {%- comment -%} Favicon {%- endcomment -%}
  {%- if settings.favicon -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  {%- comment -%} CSS {%- endcomment -%}
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}?v={{ 'now' | date: '%s' }}">
  <link rel="stylesheet" href="{{ 'katy-custom.css' | asset_url }}?v={{ 'now' | date: '%s' }}">

  {%- comment -%} Shopify required {%- endcomment -%}
  {{ content_for_header }}

  {%- comment -%} No-JS fallback {%- endcomment -%}
  <script>document.documentElement.classList.replace('no-js', 'js');</script>
  <script>
    var t = localStorage.getItem('katy-theme');
    if (t) document.documentElement.setAttribute('data-theme', t);
  </script>
</head>

<body class="template-{{ template.name }}{% if template.suffix %} template-{{ template.name }}-{{ template.suffix }}{% endif %}">
  {%- comment -%} Optional Loading Screen {%- endcomment -%}
  {%- if settings.show_loading_screen -%}
    <div class="loading-screen">
      <span class="loading-screen__logo">KATY COUTURE</span>
    </div>
  {%- endif -%}

  {%- comment -%} Skip link for accessibility {%- endcomment -%}
  <a href="#main" class="visually-hidden">Aller au contenu</a>

  {%- comment -%} Header {%- endcomment -%}
  {% sections 'header-group' %}

  {%- comment -%} Main Content {%- endcomment -%}
  <main id="main" role="main">
    {{ content_for_layout }}
  </main>

  {%- comment -%} Footer {%- endcomment -%}
  {% sections 'footer-group' %}

  {%- comment -%} JavaScript {%- endcomment -%}
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>

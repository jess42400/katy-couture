<section class="testimonials {{ section.settings.style }}">
  <div class="testimonials__header text-center">
    {%- if section.settings.subheading != blank -%}
      <span class="testimonials__subheading">{{ section.settings.subheading }}</span>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="testimonials__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
  </div>

  <div class="testimonials__grid grid grid--{{ section.blocks.size | at_most: 3 }}">
    {%- for block in section.blocks -%}
      <blockquote class="testimonial" {{ block.shopify_attributes }}>
        {%- if block.settings.rating > 0 -%}
          <div class="testimonial__rating">
            {%- for i in (1..5) -%}
              <span class="testimonial__star {% if i <= block.settings.rating %}testimonial__star--filled{% endif %}">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              </span>
            {%- endfor -%}
          </div>
        {%- endif -%}

        <p class="testimonial__quote">{{ block.settings.quote }}</p>

        <footer class="testimonial__footer">
          {%- if block.settings.image -%}
            <div class="testimonial__avatar">
              {{ block.settings.image | image_url: width: 80 | image_tag }}
            </div>
          {%- endif -%}

          <div class="testimonial__author">
            <cite class="testimonial__name">{{ block.settings.author }}</cite>
            {%- if block.settings.title != blank -%}
              <span class="testimonial__title">{{ block.settings.title }}</span>
            {%- endif -%}
          </div>
        </footer>
      </blockquote>
    {%- endfor -%}
  </div>
</section>

{% stylesheet %}
  .testimonials {
    display: flex;
    flex-direction: column;
    gap: var(--gap-xl);
  }

  .testimonials__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--gap-sm);
  }

  .testimonials__subheading {
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .testimonials__heading {
    font-size: var(--heading-2xl);
    margin: 0;
  }

  .testimonials__grid {
    gap: var(--gap-xl);
  }

  .testimonial {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--gap-xl);
    margin: 0;
    border: 1px solid var(--color-border);
    transition: border-color var(--animation-duration) var(--animation-easing);
  }

  .testimonial:hover {
    border-color: var(--color-accent);
  }

  .testimonials--minimal .testimonial {
    border: none;
    padding: var(--gap-lg);
  }

  .testimonials--cards .testimonial {
    background-color: var(--color-bg-alt);
    border: none;
  }

  .testimonial__rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: var(--gap-md);
  }

  .testimonial__star {
    color: var(--color-border);
  }

  .testimonial__star--filled {
    color: var(--color-accent);
  }

  .testimonial__quote {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-style: italic;
    line-height: 1.6;
    margin: 0 0 var(--gap-lg);
  }

  .testimonial__quote::before {
    content: '"';
  }

  .testimonial__quote::after {
    content: '"';
  }

  .testimonial__footer {
    display: flex;
    align-items: center;
    gap: var(--gap-sm);
  }

  .testimonial__avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    overflow: hidden;
  }

  .testimonial__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial__author {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .testimonial__name {
    font-style: normal;
    font-weight: 600;
    font-size: var(--text-base);
  }

  .testimonial__title {
    font-size: var(--text-sm);
    color: var(--color-muted);
  }

  @media (max-width: 768px) {
    .testimonials__grid.grid--3,
    .testimonials__grid.grid--2 {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}


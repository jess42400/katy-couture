<section
  class="hero-banner full-width {{ section.settings.height }}"
  style="--overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
>
  <div class="hero-banner__media">
    {%- if section.settings.video -%}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: 'hero-banner__video' }}
    {%- elsif section.settings.image -%}
      {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'eager', class: 'hero-banner__image' }}
    {%- else -%}
      <div class="hero-banner__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      </div>
    {%- endif -%}
  </div>

  <div class="hero-banner__overlay"></div>

  <div class="hero-banner__content {{ section.settings.content_position }} {{ section.settings.text_alignment }}">
    <div class="hero-banner__inner">
      {%- if section.settings.subheading != blank -%}
        <span class="hero-banner__subheading">{{ section.settings.subheading }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <p class="hero-banner__text">{{ section.settings.text }}</p>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <div class="hero-banner__actions">
          {% render 'button',
            label: section.settings.button_label,
            url: section.settings.button_link,
            style: section.settings.button_style,
            size: 'large'
          %}

          {%- if section.settings.button_label_2 != blank -%}
            {% render 'button',
              label: section.settings.button_label_2,
              url: section.settings.button_link_2,
              style: 'secondary',
              size: 'large'
            %}
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-banner--full { min-height: 100vh; }
  .hero-banner--large { min-height: 80vh; }
  .hero-banner--medium { min-height: 60vh; }
  .hero-banner--small { min-height: 40vh; }

  .hero-banner__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-banner__image,
  .hero-banner__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-secondary);
  }

  .hero-banner__placeholder svg {
    width: 50%;
    max-width: 400px;
    opacity: 0.15;
    color: var(--color-secondary-contrast);
  }

  .hero-banner__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, var(--overlay-opacity));
    z-index: 1;
  }

  .hero-banner__content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: var(--page-width);
    padding: var(--gap-2xl) var(--page-margin);
    color: var(--color-secondary-contrast);
  }

  .hero-banner__inner {
    max-width: 50rem;
  }

  .hero-banner__content--left { justify-content: flex-start; }
  .hero-banner__content--center {
    display: flex;
    justify-content: center;
  }
  .hero-banner__content--center .hero-banner__inner {
    text-align: center;
  }
  .hero-banner__content--right {
    display: flex;
    justify-content: flex-end;
  }
  .hero-banner__content--right .hero-banner__inner {
    text-align: right;
  }

  .hero-banner__subheading {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    margin-bottom: var(--gap-md);
    color: var(--color-accent);
  }

  .hero-banner__heading {
    font-size: var(--heading-display);
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: var(--gap-md);
    color: inherit;
  }

  .hero-banner__text {
    font-size: var(--text-lg);
    line-height: 1.6;
    margin-bottom: var(--gap-xl);
    opacity: 0.9;
    max-width: 40rem;
  }

  .hero-banner__content--center .hero-banner__text {
    margin-inline: auto;
  }

  .hero-banner__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap-sm);
  }

  .hero-banner__content--center .hero-banner__actions {
    justify-content: center;
  }

  .hero-banner__content--right .hero-banner__actions {
    justify-content: flex-end;
  }

  .hero-banner__actions .btn--secondary {
    border-color: var(--color-secondary-contrast);
    color: var(--color-secondary-contrast);
  }

  .hero-banner__actions .btn--secondary:hover {
    background-color: var(--color-secondary-contrast);
    color: var(--color-secondary);
  }

  @media (max-width: 768px) {
    .hero-banner--full { min-height: 80vh; }
    .hero-banner--large { min-height: 60vh; }

    .hero-banner__heading {
      font-size: var(--heading-2xl);
    }

    .hero-banner__actions {
      flex-direction: column;
    }

    .hero-banner__actions .btn {
      width: 100%;
    }
  }
{% endstylesheet %}


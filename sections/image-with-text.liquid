<section class="image-with-text {{ section.settings.layout }}">
  <div class="image-with-text__media">
    {%- if section.settings.image -%}
      {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'image-with-text__image' }}
    {%- else -%}
      <div class="image-with-text__placeholder">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {%- endif -%}
  </div>

  <div class="image-with-text__content {{ section.settings.text_alignment }}">
    <div class="image-with-text__inner">
      {%- if section.settings.subheading != blank -%}
        <span class="image-with-text__subheading">{{ section.settings.subheading }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="image-with-text__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="image-with-text__text rte">{{ section.settings.text }}</div>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <div class="image-with-text__actions">
          {% render 'button',
            label: section.settings.button_label,
            url: section.settings.button_link,
            style: section.settings.button_style
          %}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

{% stylesheet %}
  .image-with-text {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
    min-height: 500px;
  }

  .image-with-text--image-right {
    direction: rtl;
  }

  .image-with-text--image-right > * {
    direction: ltr;
  }

  .image-with-text__media {
    position: relative;
    overflow: hidden;
  }

  .image-with-text__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .image-with-text__placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-alt);
  }

  .image-with-text__placeholder svg {
    width: 50%;
    max-width: 200px;
    opacity: 0.3;
  }

  .image-with-text__content {
    display: flex;
    align-items: center;
    padding: var(--gap-2xl);
    background-color: var(--color-bg-alt);
  }

  .image-with-text__inner {
    display: flex;
    flex-direction: column;
    gap: var(--gap-md);
    max-width: 35rem;
  }

  .image-with-text__content--left { justify-content: flex-start; }
  .image-with-text__content--center {
    justify-content: center;
    text-align: center;
  }
  .image-with-text__content--center .image-with-text__inner {
    align-items: center;
  }
  .image-with-text__content--right {
    justify-content: flex-end;
    text-align: right;
  }
  .image-with-text__content--right .image-with-text__inner {
    align-items: flex-end;
  }

  .image-with-text__subheading {
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wider);
    text-transform: uppercase;
    color: var(--color-accent);
  }

  .image-with-text__heading {
    font-size: var(--heading-xl);
    margin: 0;
  }

  .image-with-text__text {
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--color-muted);
  }

  .image-with-text__text p {
    margin: 0 0 var(--gap-sm);
  }

  .image-with-text__text p:last-child {
    margin-bottom: 0;
  }

  .image-with-text__actions {
    margin-top: var(--gap-sm);
  }

  @media (max-width: 768px) {
    .image-with-text {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .image-with-text--image-right {
      direction: ltr;
    }

    .image-with-text__media {
      aspect-ratio: 4 / 3;
    }

    .image-with-text__content {
      padding: var(--gap-xl) var(--page-margin);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.image_with_text.name",
  "tag": "section",
  "class": "section-image-with-text",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.image_with_text.settings.image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:labels.image"
    },
    {
      "type": "header",
      "content": "t:sections.image_with_text.settings.content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:labels.subheading",
      "default": "Notre histoire"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:labels.heading",
      "default": "L'art du savoir-faire"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:labels.text",
      "default": "<p>Chaque piece est le fruit d'un travail minutieux, realise par des artisans passionnes. Nous selectionnons les plus belles matieres pour creer des pieces uniques qui traverseront le temps.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "t:labels.button_label",
      "default": "En savoir plus"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:labels.button_link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "t:labels.button_style",
      "options": [
        { "value": "primary", "label": "t:options.button_style.primary" },
        { "value": "secondary", "label": "t:options.button_style.secondary" },
        { "value": "accent", "label": "t:options.button_style.accent" }
      ],
      "default": "secondary"
    },
    {
      "type": "header",
      "content": "t:sections.image_with_text.settings.layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "t:labels.layout",
      "options": [
        { "value": "image-with-text--image-left", "label": "t:options.layout.image_left" },
        { "value": "image-with-text--image-right", "label": "t:options.layout.image_right" }
      ],
      "default": "image-with-text--image-left"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:labels.text_alignment",
      "options": [
        { "value": "image-with-text__content--left", "label": "t:options.alignment.left" },
        { "value": "image-with-text__content--center", "label": "t:options.alignment.center" }
      ],
      "default": "image-with-text__content--left"
    }
  ],
  "presets": [
    {
      "name": "t:sections.image_with_text.name"
    }
  ]
}
{% endschema %}

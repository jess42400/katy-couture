          {%- endif -%}

          {%- if block.settings.title != blank -%}
            <h3 class="savoir-faire__item-title">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.text != blank -%}
            <p class="savoir-faire__item-text">{{ block.settings.text }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>


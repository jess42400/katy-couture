    <div class="savoir-faire__header reveal">
      {%- if section.settings.subtitle != blank -%}
        <p class="savoir-faire__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
